<Window x:Class="CarManagement.TestDriveAppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Schedule Test Drive Appointment" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Customer -->
        <Label Content="Customer:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbCustomer" Grid.Row="0" Grid.Column="1" Margin="5" 
                  DisplayMemberPath="FullName" SelectedValuePath="Id"/>

        <!-- Car -->
        <Label Content="Car:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbCar" Grid.Row="1" Grid.Column="1" Margin="5" 
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>


        <!-- Appointment Date -->
        <Label Content="Appointment Date:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <xctk:DateTimePicker x:Name="dtpAppointmentDateTime" Grid.Row="2" Grid.Column="1" 
                             Margin="5" Format="Custom" FormatString="dd/MM/yyyy HH:mm"/>



        <!-- Note -->
        <Label Content="Note:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNote" Grid.Row="3" Grid.Column="1" Margin="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Vertical" 
                    HorizontalAlignment="Right" Margin="0,20,0,0" Width="460">
            <Button Content="Save" Width="80" Margin="5" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
