<Window x:Class="CarManagement.CarForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Form" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Name:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="txtName" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1">
            <TextBlock Text="Configuration:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="txtConfig" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="2">
            <TextBlock Text="Price:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPrice" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="3">
            <TextBlock Text="Is Electric:" Width="100" VerticalAlignment="Center"/>
            <CheckBox x:Name="chkElectric"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="5" HorizontalAlignment="Center">
            <Button Content="Save" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

