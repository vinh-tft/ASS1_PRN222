<Window x:Class="CarManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Username:" Width="80"/>
            <TextBox x:Name="txtUsername" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1">
            <Label Content="Password:" Width="80"/>
            <PasswordBox x:Name="txtPassword" Width="200"/>
        </StackPanel>

        <Button Content="Login" Width="100" Height="30" Grid.Row="2" 
                HorizontalAlignment="Right" Margin="5"
                Click="Login_Click"/>
    </Grid>
</Window>
